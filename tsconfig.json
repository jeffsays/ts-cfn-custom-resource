{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true, // Emit additional JavaScript to ease importing CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "target": "es2022", // Specify ECMAScript target version
    "allowJs": true, // allow to import .js files
    "resolveJsonModule": true, // allow to import .json files
    // "moduleDetection": "force", // This option forces TypeScript to consider all files as modules. This helps to avoid 'cannot redeclare block-scoped variable' errors.
    "isolatedModules": true, // This option prevents a few TS features which are unsafe when treating modules as isolated files.
    "verbatimModuleSyntax": false, // if true, forces you to use import type and export type, leading to more predictable behavior and fewer unnecessary imports

    /* Strictness */
    "strict": true, // Enable all strict type-checking options
    "noUncheckedIndexedAccess": true, // Prevents you from accessing an array or object without first checking if it's defined
    "noImplicitOverride": true, // Makes the override keyword actually useful in classes.

    "declaration": true,
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./lib",
    "module": "es2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, // can only be used when either 'noEmit' or 'emitDeclarationOnly' is set
    "noEmit": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
